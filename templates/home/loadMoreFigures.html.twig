{% for label, messages in app.flashes(['success', 'warning', 'info', 'danger']) %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} d-none">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
{% for figure in figures %}
    <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card">
            <a href="{{ path('figure_show', {'id' : figure.id, 'slug': figure.slug}) }}">
                <img src="{{ asset(figure.pictures|first.url) }}" class="card-img-top">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        {{ figure.name }}
                        {% if app.user %}
                            <div class="float-right">
                                <a href="{{ path('figure_edit', {'id' : figure.id, 'slug': figure.slug}) }}"><i class="fas fa-pencil-alt"></i></a>
                                {# <a href="{{ path('trick_delete', {'slug': figure.slug}) }}" onclick="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{trick.name}} ?`)"><i class="fas fa-trash-alt"></i></a>
                                #}</div>
                        {% endif %}
                    </h5>
                </div>
            </a>
        </div>
    </div>
{% endfor %}