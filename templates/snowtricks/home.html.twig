{% extends "base.html.twig" %}
{% block body %}
    <div class="bg-gradient-success" style="width: 100%; height: 100%"></div>
    <div class="row">

    {% for figure in figures %}
        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
            <a href="{{ path('figure_show', {'id': figure.id}) }}">
                <div class="card">
                    <img class="card-img-top" src="{{ figure.medias[0].url }}" alt="Card image cap">
                    <div class="card-title d-flex">
                        <div class="mr-auto p-2">{{ figure.name }}</div>
                        {% if app.user %}
                            <div class="p-2"><a href="{{ path('figure_edit', {'id':figure.id}) }}"><i class="fas fa-edit"></i></a></div>
                            <div class="p-2"><i class="fas fa-edit"></i></div>
                        {% endif %}
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
    </div>
{% endblock %}

