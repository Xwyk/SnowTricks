{% for figure in figures %}
    <div class="col-lg-3 col-md-4 col-sm-6 p-2">
        <div class="card">
            <a href="{{ path('figure_show', {'id' : figure.id, 'slug': figure.slug}) }}">
                <img src="{{ asset(figure.pictures|first.url) }}" class="card-img-top">
            </a>
            <div class="card-body text-center d-flex justify-content-between">
                <a href="{{ path('figure_show', {'id' : figure.id, 'slug': figure.slug}) }}" class="text-dark">
                    <h5 class="card-title">
                        {{ figure.name }}
                    </h5>
                </a>
                {% if app.user %}
                    <a href="{{ path('figure_edit', {'id' : figure.id, 'slug': figure.slug}) }}" class="text-dark"><i class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('figure_delete', {'id' : figure.id, 'slug': figure.slug}) }}" onclick="return confirm(`Êtes-vous sûr de vouloir supprimer la figure : {{figure.name}} ?`)" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                {% endif %}
            </div>
        </div>
    </div>
{% endfor %}