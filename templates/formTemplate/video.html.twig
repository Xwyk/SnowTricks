{% block _figure_videos_entry_row %}
    <fieldset class="card col-4 p-2 m-2 align-middle">
        <div class="card-img-top position-relative">
            <iframe class="dynamic-display" width="100%" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div class="d-flex justify-content-between image-caption w-100 bg-light-transparent">
            <div class="removeBtn image-caption"></div>

            {{ form_widget(form.url) }}
        </div>
    </fieldset>
{% endblock %}

{% block _figure_videos_entry_url_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _figure_videos_entry_url_widget %}
    <input type="text" class="dynamic-entry" id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" value="{{ form.vars.value }}"/>
{% endblock %}

{% block _figure_videos_entry_widget %}
    {{ form_row(form) }}
{% endblock %}

{% block _figure_videos_label %}
    <legend class="col-form-label required">Vid√©os</legend>
{% endblock %}