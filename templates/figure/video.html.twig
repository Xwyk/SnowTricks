{% block _figure_videos_en2try_row %}
    <fieldset class="form-group col-4">
        <div class="row">
            <div class="col-8">
                {{ form_errors(form.url) }}
                {{ form_widget(form.url) }}
            </div>
            <div class="col-4 removeBtn">
                {# This class allow dynamic add of remove button #}
            </div>
        </div>
        <div class="row">
            <div class="col-12 videoOnEdit">
                {{ (form.url.vars.data|default('<div>Enregistrez un adresse pour voir la video</p>'))|raw }}
            </div>
        </div>
    </fieldset>
{% endblock %}
{% block _figure_videos_row %}
        {{ form_row(form, {'attr': {'class': 'row'}}) }}
{% endblock %}

{# Card template for video entry #}
{% block _figure_videos_entry_row %}
    <fieldset class="card">
        <div class="card-img-top videoOnEdit" alt="Card image cap">
            {{ (form.url.vars.data|default('<div>Enregistrez un adresse pour voir la video</p>'))|raw }}
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ form_label(form.url) }}</h5>
            <p class="card-text">
                {{ form_errors(form.url) }}
                {{ form_widget(form.url) }}</p>
            <div class="removeBtn"></div>
        </div>
    </fieldset>
{% endblock %}
{% block externalCSS %}
    <link rel="stylesheet" href="{{ asset("css/video.css") }}">
{% endblock %}
