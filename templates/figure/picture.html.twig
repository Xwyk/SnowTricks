{% endblock %}

{% block _figure_pictures_entry_url_widget %}
        <img class="picture" width="100%" src="{{ form.vars.data }}"/>
        <input type="text" id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" value="{{ form.vars.data }}" hidden/>
{% endblock %}

{% block _figure_pictures_entry_image_widget %}
    <input type="file" id="{{ form.vars.id }}" name="{{ form.vars.full_name }}">
{% endblock %}

