{% block _figure_pictures_entry_row %}
    <fieldset class="card col-4 p-2 m-2 align-middle">
        <div class="card-img-top">
            {{ form_row(form.url) }}
            <div class="card-body">
            {{ form_row(form.image) }}

            <div class="removeBtn"></div>
            </div>
        </div>
    </fieldset>
{% endblock %}

{% block _figure_pictures_entry_url_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _figure_pictures_entry_url_widget %}
    <img class="picture" width="100%" src="{{ form.vars.data }}"/>
{% endblock %}

{% block _figure_pictures_entry_image_widget %}
    {{ form_widget(form) }}
{% endblock %}

{% block _figure_pictures_entry_image_row %}
    <div class="custom-file">
        <input type="file" id="figure_pictures_1_image" name="figure[pictures][1][image]" class="custom-file-input">
        <label for="figure_pictures_1_image" lang="en" class="custom-file-label">Choisir</label>
    </div>
            {{ form_widget(form) }}
{% endblock %}